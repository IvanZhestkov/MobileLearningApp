<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itis.android.mobilelearningapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.instruction.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppStartTheme" />
        <activity
            android:name=".activities.auth.SignInAndSignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.main.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HomeworkActivity"
            android:label="@string/title_activity_homework"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.AddHomeworkActivity"
            android:label="@string/title_activity_add_homework"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.AddSubjectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DetailsHomeworkActivity"
            android:label="@string/title_activity_details_homework"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.FinishHomeworkActivity"
            android:label="@string/title_activity_finish_homework"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.StudentProgressActivity"
            android:label="@string/title_activity_student_progress"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>